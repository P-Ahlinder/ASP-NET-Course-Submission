@model UserLoginVM

@{
    ViewData["Title"] = "Sign in";
}

<div class="signup-main">
    <h1>Sign in</h1>
    <form method="post" novalidate asp-route-ReturnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>
        
        <div>
            <label asp-for="Email">E-mail</label>
            <input asp-for="Email" />
            <small><span asp-validation-for="Email"></span></small>
        </div>
        
        <div>
            <label asp-for="Password">Password</label>
            <input asp-for="Password" />
            <small><span asp-validation-for="Password"></span></small>
        </div>
        <div>
            <button type="submit">Sign in</button>
        </div>
    </form>
    <p>Not a member yet?  Register <a asp-action="Index" asp-controller="Register">here.</a></p>
</div>
